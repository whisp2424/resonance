{
    "name": "resonance",
    "version": "0.0.1",
    "main": "dist/main/index.js",
    "author": "whispmoe",
    "lint-staged": {
        "*.{html,css,js,ts,jsx,tsx,json,md}": [
            "prettier --write"
        ],
        "*.{js,ts,jsx,tsx}": [
            "eslint --fix --max-warnings=0"
        ]
    },
    "scripts": {
        "prepare": "husky",
        "postinstall": "electron-builder install-app-deps",
        "dev": "electron-vite dev",
        "start": "electron-vite preview",
        "build": "pnpm run check:node && electron-vite build",
        "build:win": "pnpm run build && electron-builder --win",
        "build:linux": "pnpm run build && electron-builder --linux",
        "build:unpack": "pnpm run build && electron-builder --dir",
        "check:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "check:web": "tsc --noEmit -p tsconfig.web.json --composite false",
        "check": "pnpm run check:node && pnpm run check:web",
        "lint": "eslint --cache .",
        "lint:fix": "eslint --cache --fix .",
        "format": "prettier --write .",
        "fix": "pnpm run lint:fix && pnpm run format"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.2",
        "@electron-toolkit/utils": "^4.0.0"
    },
    "devDependencies": {
        "@base-ui/react": "^1.1.0",
        "@electron-toolkit/eslint-config-prettier": "^3.0.0",
        "@electron-toolkit/eslint-config-ts": "^3.1.0",
        "@electron-toolkit/tsconfig": "^2.0.0",
        "@electron-toolkit/typed-ipc": "^1.0.2",
        "@iconify-json/fluent": "^1.2.37",
        "@svgr/core": "^8.1.0",
        "@svgr/plugin-jsx": "^8.1.0",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^25.0.9",
        "@types/react": "^19.2.8",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.2",
        "clsx": "^2.1.1",
        "electron": "^40.0.0",
        "electron-builder": "^26.4.0",
        "electron-vite": "^5.0.0",
        "eslint": "^9.39.2",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.26",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.0",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-router-dom": "^7.12.0",
        "tailwind-merge": "^3.4.0",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.0",
        "unplugin-icons": "^23.0.1",
        "vite": "^7.3.1",
        "vite-plugin-svgr": "^4.5.0"
    }
}
